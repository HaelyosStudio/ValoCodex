{% extends 'base.html.twig' %}

{% block title %}Weapon Details
{% endblock %}

{% block body %}
<div class="container mt-3">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card agentCard">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center">
                        <img src="{{ asset('valo_images/weapons/' ~ weapon.imageName) }}" class="weaponDetailsImage img-fluid" alt="...">
                        <div class="weaponStats ms-3">
                            <h5 style="color: var(--secondaryColor);">
                                <span style="color: var(--mainColor);">{{ weapon.name }}</span>
                                stats :
                            </h5>
                            <div class="weaponDetail">
                                <strong>Category:</strong>
                                {{ weapon.weaponCategory.title }}
                            </div>
                            <div class="weaponDetail">
                                <strong>Primary Fire:</strong>
                                {{ weapon.primary_fire }}
                            </div>
                            <div class="weaponDetail">
                                <strong>Secondary Fire:</strong>
                                {{ weapon.secondary_fire }}
                            </div>
                            <div class="weaponDetail">
                                <strong>Mag Capacity:</strong>
                                {{ weapon.mag_capacity }}
                            </div>
                            <div class="weaponDetail">
                                <strong>Wall Penetration:</strong>
                                {{ weapon.wall_penetration }}
                            </div>
                            <div class="weaponDetail">
                                <strong>Price:</strong>
                                {{ weapon.price }}
                            </div>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <a href="{{ path('app_agent')}}" class="goBackButton">Go to weapons list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
